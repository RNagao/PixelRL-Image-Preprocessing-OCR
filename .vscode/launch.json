  "version": "0.2.0",
  "configurations": [
    {
      "name": "Depurador do Python: Arquivo Atual",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: main.py",
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "env": { "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "2" }
    }
  ]
}
